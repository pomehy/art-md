extends ../components/base/layout

block variables
  - const title = "О компании АМР Артмедиа" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "about-company.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks


  -
    const aboutData = {
      img: {
        path: 'content/about',
        image: 'about-intro',
        format: 'jpg',
        width: 1920,
        height: 1280,
        altText: 'Фото команды',
      },
      breadcrumbs: [
        {
          href: "index.html",
          text: "Главная",
        },
        {
          href: "about-company.html",
          text: "О компании",
        },
      ],
    }

block main
  main
    h1.visually-hidden О компании АМР Артмедиа
    +button-to-top()

    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +page-intro(aboutData)
    +page-about()
block modals
  +modal("modal--feedback")(data-modal="feedback")
    +modal-feedback()
  +modal("modal--privacy")(data-modal="privacy")
    +modal-privacy()
