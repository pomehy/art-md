extends ../components/base/layout

block variables
  - const title = "Партнеры АМР Артмедиа" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "partners.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

  -
    const aboutPartners = {
      img: {
        path: 'content/partners',
        image: 'partners-intro',
        format: 'jpg',
        width: 1920,
        height: 1280,
        altText: 'Жест партнерства',
      },
      breadcrumbs: [
        {
          href: "index.html",
          text: "Главная",
        },
        {
          href: "partners.html",
          text: "Нам доверяют",
        },
      ],
    }

block main
  main
    h1.visually-hidden Партнеры АМР Артмедиа
    +button-to-top()
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +page-intro(aboutPartners)
    +page-partners()
block modals
  +modal("modal--feedback")(data-modal="feedback")
    +modal-feedback()
  +modal("modal--privacy")(data-modal="privacy")
    +modal-privacy()
