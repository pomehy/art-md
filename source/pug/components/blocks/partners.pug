mixin partners()
  section.page-section.partners(data-slider-partner-container, data-animation-group)
    .container
      .page-section__header.fit.d-200
        h2.page-section__title Наши партнёры
        p.page-section__description Мы имеем опыт работы с бизнесом в разных сферах и областях
        .slider-control
          button.slider-control__button(type="button", data-slider-control-prev)
            +icon("icon-arrow-left", 16, 16)
          button.slider-control__button(type="button", data-slider-control-next)
            +icon("icon-arrow-right", 16, 16)
      .page-section__grid.page-section__grid--partners-slider
        .partners__slider.swiper.fit.d-300(data-slider-partner)
          .swiper-wrapper
            each item in partnerCardData
              +partner-card(item).swiper-slide
          .slider-pagination(data-slider-pagination)
        +button({text: "Посмотреть всех", href: "#"})(aria-label="Перейти на страницу Партнеры").page-section__button.fit.d-200

